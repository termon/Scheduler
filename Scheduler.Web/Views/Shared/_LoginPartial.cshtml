<!-- AMC Login partial to display links on nav bar -->
<!-- Logged in -->
<div class="navbar-nav" asp-condition="@User.Identity.IsAuthenticated">  
    <div class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi-person-fill"></i> @User.Identity.Name
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" asp-controller="User" asp-action="UpdateProfile"><i class="bi bi-gear"></i> Update Profile</a>
            <a class="dropdown-item" asp-controller="User" asp-action="UpdatePassword"><i class="bi bi-lock-fill"></i> Update Password</a>
            <hr class="dropdown-divider">
            <form asp-controller="User" asp-action="Logout">
                <button type="submit" class="dropdown-item btn btn-link"><i class="bi bi-person-dash-fill"></i> Logout</button>
            </form>
        </div>
    </div>         
</div>

<!-- Not Logged in -->
<div class="navbar-nav" asp-condition="@(!User.Identity.IsAuthenticated)">
    <a class="nav-link text-dark"  asp-controller="User" asp-action="Login">Login</a>
    <a class="nav-link text-dark"  asp-controller="User" asp-action="Register">Register</a>
</div>
